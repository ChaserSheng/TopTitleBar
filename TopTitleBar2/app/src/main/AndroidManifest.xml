<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.wangsheng.toptitlebar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".OneActivity" android:theme="@style/AppNoBar"/>
        <activity android:name=".ThreeActivity" android:theme="@style/AppNoBar"/>
        <activity android:name=".TwoActivity" android:theme="@style/AppNoBar"/>
        <activity android:name=".FourActivity" android:theme="@style/AppNoBar"/>
        <activity android:name=".FiveActivity" android:theme="@style/AppNoBar"/>
    </application>

</manifest>